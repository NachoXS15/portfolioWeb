---
import { Icons, IconsColors } from "../../config/IconsSet";
import { CiGlobe } from "react-icons/ci";
import Starred from "../ui/Starred.astro";

interface Props {
    title?: string;
    desc?: string;
    img?: string;
    sLink?: string
    starred?: boolean
    profile: string
}

const { title, desc, img, sLink, starred, profile} = Astro.props;

---

<article class="w-full h-[380px] md:m-2 bg-semi-black pb-4 flex flex-col justify-between items-center rounded-lg">
    <div class="w-full">
        <div
            class="h-[200px] text-center rounded-lg bg-cover bg-start "
            style={`background-image: url(/assets/projects/${img})`}
        >
        </div>
        <div class="m-2">
            <h2 class="text-2xl font-bold">{title}</h2>
            <p>{desc}</p>
        </div>
    </div>
    <div class="flex self-end gap-2">
        {starred && <Starred />}
        <a href={profile == "dev" ? `/project/${sLink}` : `/videoeditor/project/${sLink}`} class="px-5 py-2 bg-white rounded-full text-semi-black font-semibold mr-3 mb-3 border transition hover:bg-semi-black hover:text-white hover:border-white active:text-white active:border-white active:bg-semi-black">Ver MÃ¡s</a>
    </div>
</article>
