---
import ProjectCard from "./ProjectCard.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");

const tgProject = projects.find(
    (project) => project.data.title === "TravelGit",
);

const flProject = projects.find(
    (project) => project.data.title === "Feria del Libro",
);

---

<section>
    <div
        class="w-full m-auto mt-10 px-5 grid grid-cols-1 md:grid-cols-2 xl:px-44 2xl:px-60 lg:px-24 mb-4 gap-5 flex-wrap md:flex-row"
    >
        {
            tgProject && (
                <ProjectCard
                    title={tgProject.data.title}
                    desc={tgProject.data.desc}
                    sLink={tgProject.slug}
                    img={tgProject.data.img}
                    starred={tgProject.data.starred}
                />
            )
        }
        {
            flProject && (
                <ProjectCard
                    title={flProject.data.title}
                    desc={flProject.data.desc}
                    sLink={flProject.slug}
                    img={flProject.data.img}
                    starred={flProject.data.starred}
                />
            )
        }
    </div>
</section>
