---
import { Icons, IconsColors } from "../../config/Icons";
import { CiGlobe } from "react-icons/ci";

interface Props {
    title: string;
    desc: string;
    link: string;
    repo: string;
    frame?: string;
    lenguage: string;
    img: string;
}

const { title, desc, lenguage, link, frame, img, repo } = Astro.props;

//Lenguage
const iconKeyLenguage = lenguage.toLowerCase() as keyof typeof Icons;
const IconLenguage = Icons[iconKeyLenguage];
const ColorLenguage = IconsColors[iconKeyLenguage];

//Frame
const iconKeyFrame = frame.toLowerCase() as keyof typeof Icons;
const IconFrame = Icons[iconKeyFrame];
const ColorFrame = IconsColors[iconKeyFrame];

const Globe = Icons['']
---

<article class="w-full h-[350px] m-2 bg-semi-black md:w-1/3 rounded-lg">
    <div
        class="h-[200px] rounded-lg bg-cover bg-start"
        style={`background-image: url(${img})`}
    >
    </div>
    <div class="m-2">
        <h2 class="text-xl font-bold">{title}</h2>
        <p>{desc}</p>
        <a href={link}></a>
        <a href={repo}>{}</a>
        <nav class="mt-5 flex justify-end">
            <span>
                {
                    IconLenguage && (
                        <IconLenguage size={60} color={ColorLenguage} />
                    )
                }
            </span>
            <span>
                {
                    IconFrame && (
                        <IconFrame size={60} color={ColorFrame} />
                    )
                }
            </span>
            <span>
                {<CiGlobe size={60}/>}
            </span>
        </nav>
    </div>
</article>
