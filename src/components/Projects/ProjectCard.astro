---
import { Icons, IconsColors } from "../../config/IconsSet";
import { CiGlobe } from "react-icons/ci";

interface Props {
    title: string;
    desc: string;
    link: string;
    repo: string;
    frame?: string;
    lenguage: string;
    img: string;
}

const { title, desc, lenguage, link, frame, img, repo } = Astro.props;

//Lenguage
const iconKeyLenguage = lenguage.toLowerCase() as keyof typeof Icons;
const IconLenguage = Icons[iconKeyLenguage];
const ColorLenguage = IconsColors[iconKeyLenguage];

//Frame
const iconKeyFrame = frame.toLowerCase() as keyof typeof Icons;
const IconFrame = Icons[iconKeyFrame];
const ColorFrame = IconsColors[iconKeyFrame];

const Globe = Icons['']
---

<article class="w-full h-[380px] md:m-2 bg-semi-black pb-4 md:w-1/3 flex flex-col justify-between items-center rounded-lg">
    <div class="w-full">
        <div
            class="h-[200px] text-center rounded-lg bg-cover bg-start "
            style={`background-image: url(${img})`}
        >
        </div>
        <div class="m-2">
            <h2 class="text-2xl font-bold">{title}</h2>
            <p>{desc}</p>
            <a href={link}></a>
            <a href={repo}>{}</a>
        </div>
    </div>
    <nav class="flex justify-end self-end pr-2 items-center gap-1">
        <span>
            {
                IconLenguage && (
                    <IconLenguage size={40} color={ColorLenguage} />
                )
            }
        </span>
        <span>
            {
                IconFrame && (
                    <IconFrame size={40} color={ColorFrame} />
                )
            }
        </span>
        <span class="hover:scale-110 transition cursor-pointer">
            <a href={link} target="_blank">{<CiGlobe size={40}/>}</a>
        </span>
    </nav>
</article>
